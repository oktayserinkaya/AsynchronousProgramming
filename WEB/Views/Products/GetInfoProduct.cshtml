@{
	ViewData["Title"] = "Get Product Info";
}
@model GetProductInfoVM

<div class="container mt-5">
	<div class="card profile-card p-4">
		<div class="text-center">
			<img src="~/images/@Model.ImagePath" alt="Ürün Fotoğrafı" class="profile-img shadow">
			<h3 class="mt-3 mb-1">@Model.Name</h3>
			<p class="text-muted">@Model.Category</p>
		</div>

		<hr>

		<div class="row mt-3">
			<div class="col-md-6 mb-3">
				<strong>Ürün Adı :</strong> @Model.Name
			</div>
			<div class="col-md-6 mb-3">
				<strong>Kategori :</strong> @Model.Category
			</div>
			<div class="col-md-6 mb-3">
				<strong>Açıklama :</strong> @Model.Description
			</div>
			<div class="col-md-6 mb-3">
				<strong>Birim Fiyatı :</strong> @Model.UnitPrice
			</div>
		</div>

		<hr>

		<div class="d-flex justify-content-between">
			<a asp-action="Index" class="btn btn-outline-secondary">
				← Geri Dön
			</a>
			<div class="d-flex gap-2">
				<a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-outline-success">Düzenle</a>
				<button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@Model.Id">
					Sil
				</button>

				<!-- Modal -->
				<div class="modal fade" id="exampleModal-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h1 class="modal-title fs-5" id="exampleModalLabel">Silme Uyarısı</h1>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body text-start">
								Silmek istediğinize emin misiniz?
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
								<a asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger">Evet</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>