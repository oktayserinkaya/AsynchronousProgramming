@{
	ViewData["Title"] = "Create Product";
}
@model CreateProductVM

<div class="row">
	<div class="col-md-8">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Yeni Ürün Ekle</h3>
			</div>
			<form asp-action="CreateProduct" id="myForm" enctype="multipart/form-data">
				<div class="card-body">
					<div>
						<label class="form-label" asp-for="Name"></label>
						<input class="form-control" asp-for="Name" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div>
						<label class="form-label" asp-for="CategoryId"></label>
						<select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"></select>
						<span asp-validation-for="CategoryId" class="text-danger"></span>
					</div>
					<div>
						<label class="form-label" asp-for="Description"></label>
						<input class="form-control" asp-for="Description" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div>
						<label class="form-label" asp-for="UnitPrice"></label>
						<input type="number" class="form-control" asp-for="UnitPrice" />
						<span asp-validation-for="UnitPrice" class="text-danger"></span>
					</div>
					<div class="d-flex row mt-2">
						<div class="col-md-9 col-lg-9 col-sm-9 col-xs-9">
							<label class="form-label" asp-for="Image"></label>
							<input onchange="loadFile(event)" class="form-control" asp-for="Image" />
							<span asp-validation-for="Image" class="text-danger"></span>
						</div>
						<div class="col-md-1"></div>
						<div class="col-md-2 col-lg-2 col-sm-2 col-xs-2">
							<img id="imageOutput" width="100" height="100" />
						</div>
					</div>
				</div>
				<div class="card-footer d-flex justify-content-between">
					<a asp-action="Index" class="btn btn-outline-dark">Geri Dön</a>
					<button type="submit" class="btn btn-outline-success">Kaydet</button>
				</div>
			</form>
		</div>
	</div>
</div>